        nps.LDFLAGS += -lcurl
        nps.LDFLAGS += -ljpeg
        nps.LDFLAGS += -glib
        <!-- nps.LDFLAGS += -lgtk-2.0-dev -->
        <!--
        ap.LDFLAGS += -lcurl
        ap.LDFLAGS += -ljpeg
        ap.LDFLAGS += -glib
        -->
    </raw>
  </makefile>
