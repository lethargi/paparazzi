    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 2)"/>
      <call fun="NavSetAltitudeReferenceHere()"/>
    </block>
    <block name="Holding point">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block key="r" name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
--> 
    <block name="Holding point">
        <call fun="NavKillThrottle()"/>
        <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
        <exception cond="stage_time > 1" deroute="Takeoff"/>
    </block>

    <block key="t" name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
        <call fun="NavKillThrottle()"/>
        <call fun="NavSetAltitudeReferenceHere()"/>
        <call fun="NavResurrect()"/>
        <exception cond="stateGetPositionEnu_f()->z > 1.25" deroute="Standby"/>
        <call fun="NavSetWaypointHere(WP_CLIMB)"/>
        <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>

    <block key="s" name="Standby" strip_button="Standby" strip_icon="home.png">
        <call fun="NavSetWaypointHere(WP_STDBY)"/>
        <go wp="STDBY"/>
        <stay wp="STDBY"/>
    </block>

    <block name="Roll_right">
        <attitude roll="3" alt="GetAltRef()" vmode="alt" until="stage_time > 1.5"/>
        <deroute block="Standby"/>
        <!--
        <attitude roll="5" vmode="alt" until="FALSE"/>
-->
    </block>

    <block name="GoGoal">
        <go wp="GOAL"/>
        <stay wp="GOAL"/>
    </block>

    <block key="g" name="START" strip_button="Go" strip_icon="lookfore.png">
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
    </block>
    <block name="StayGoal">
        <go wp="GOAL"/>
        <stay wp="GOAL"/>
<!--
        <exception cond="block_time > 0.5" deroute="MoveGoalForward"/>
      <exception cond="!InsideObstacleZone(GetPosX(), GetPosY())" deroute="LookAtHome"/>
      <exception cond="!safeToGoForwards" deroute="ChangeHeading"/>
      <exception cond="!InsideObstacleZone(GetPosX(),GetPosY())" deroute="PrepareObstacleRun"/>
-->
    </block>
    <block name="MoveGoalForward">
        <call fun="moveWaypointForwards(WP_GOAL,0.15)"/>
        <deroute block="StayGoal"/>
        <exception cond="!InsideObstacleZone(WaypointX(WP_GOAL),WaypointY(WP_GOAL))" deroute="LookAtHome"/>
<!--
      <exception cond="!safeToGoForwards" deroute="ChangeHeading"/>
      <exception cond="!InsideObstacleZone(WaypointX(WP_GOAL),WaypointY(WP_GOAL))" deroute="PrepareObstacleRun"/>
-->
    </block>

    <block name="MoveGoalBackward">
        <call fun="moveWaypointBackwards(WP_GOAL,0.15)"/>
        <deroute block="StayGoal"/>
    </block>

    <block name="MoveGoalLeftward">
        <call fun="moveWaypointLeftwards(WP_GOAL,0.15)"/>
        <deroute block="StayGoal"/>
    </block>
    <block name="MoveGoalRightward">
        <call fun="moveWaypointRightwards(WP_GOAL,0.15)"/>
        <deroute block="StayGoal"/>
    </block>


    <block name="LookNorth">
        <call fun="nav_set_heading_towards(GetPosX(),GetPosY()+10)"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
    <block name="LookSouth">
        <call fun="nav_set_heading_towards(GetPosX(),GetPosY()-10)"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
    <block name="LookEast">
        <call fun="nav_set_heading_towards(GetPosX()+10,GetPosY())"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
    <block name="LookWest">
        <call fun="nav_set_heading_towards(GetPosX()-10,GetPosY())"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
    <block name="LookBehind">
      <while cond="1">
        <call fun="increase_nav_heading(&nav_heading,incrementForBehind)"/>
      </while>
      <exception cond="block_time > 4" deroute="Standby"/>
        <!--
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
-->
    </block>
    <!--
    <block name="LookNorth">
        <call fun="nav_set_heading_deg(0)"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
    <block name="LookSouth">
        <call fun="nav_set_heading_deg(180)"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
    <block name="LookEast">
        <call fun="nav_set_heading_deg(90)"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
    <block name="LookWest">
        <call fun="nav_set_heading_deg(270)"/>
        <call fun="NavSetWaypointHere(WP_GOAL)"/>
        <stay wp="GOAL"/>
    </block>
-->

    <block name="LookAtHome">
        <call fun="nav_set_heading_towards_waypoint(WP_HOME)"/>
        <call fun="moveWaypointForwards(WP_GOAL,0.3)"/>
        <call fun="NavSetWaypointHere(WP_STDBY)"/>
        <!--
        <deroute block="StayGoal"/>
-->
        <stay wp="STDBY"/>
        <exception cond="block_time > 1" deroute="StayGoal"/>
    </block>




<!--
    <block key="g" name="START" strip_button="Go" strip_icon="lookfore.png">
      <call fun="NavSetWaypointHere(WP_GOAL)"/>
    </block>
    <block name="StayGoal">
      <go wp="GOAL"/>
      <exception cond="block_time > 1" deroute="MoveGoalForward"/>
      <exception cond="!safeToGoForwards" deroute="ChangeHeading"/>
